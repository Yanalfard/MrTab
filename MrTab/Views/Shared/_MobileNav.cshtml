    <ul class="uk-list">
        <li>
            <a href="/" class="uk-h4">
                <span uk-icon="home"></span>
                <span>خانه</span>
            </a>
        </li>
        <li>
            <a href="/Home/About" class="uk-h4">
                <span uk-icon="information-circle-outline"></span>
                <span>درباره</span>
            </a>
        </li>
        <li>
            <a href="/Home/ContactUs" class="uk-h4">
                <span uk-icon="globe-outline"></span>
                <span>تماس با ما</span>
            </a>
        </li>
        <li>
            <a href="#Modal-Location" class="uk-h4">
                <span uk-icon="location-outline"></span>
                <span>تغییر مکان</span>
            </a>
        </li>
        <li>
            <a href="/Home/Search" class="uk-h4">
                <span uk-icon="search-outline"></span>
                <span>جستجو</span>
            </a>
        </li>

        @if (User.Identity.IsAuthenticated)
        {
            @if (User.Claims.Last().Value == "user")
            {
                <li>
                    <a href="/User/User/Index" class="uk-h4">
                        <span uk-icon="person-circle-outline"></span>
                        <span>پروفایل</span>
                    </a>
                </li>
            }
            else if (User.Claims.Last().Value == "author")
            {
                <li>
                    <a href="/Admin/Home/Index" class="uk-h4">
                        <span uk-icon="person-circle-outline"></span>
                        <span>پروفایل</span>
                    </a>
                </li>
            }
            else if (User.Claims.Last().Value == "admin")
            {
                <li>
                    <a href="/Admin/Home/Index" class="uk-h4">
                        <span uk-icon="person-circle-outline"></span>
                        <span>پروفایل</span>
                    </a>
                </li>
            }
            <li>
                <a href="/Account/LogOut" class="uk-h4 uk-text-danger">
                    <span uk-icon="log-out-outline"></span>
                    <span>خروج</span>
                </a>
            </li>
        }
        else
        {
            <li>
                <a href="/Account/Login" class="uk-h4">
                    <span uk-icon="log-in-outline"></span>
                    <span>ورود</span>
                </a>
            </li>
        }

    </ul>
        <button class="hideOnStandalone btn btn-primary btn-round btn-pwa">
            <span>دانلود اپلیکیشن موبایل</span>
            <span uk-icon="phone-portrait-outline"></span>
        </button>
        @*<label class="copyright uk-margin-auto-top">2020 کپی رایت &copy;</label>*@
    </div>
</div>

<!-- Mobile navigation -->
