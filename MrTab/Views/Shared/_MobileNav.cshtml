            <span class="hamburger-close uk-offcanvas-close btn-icon" uk-icon="icon:hamburger-close"></span>
            <a href="/Home/Profile" class="profile-image-container"><img class="profile-image" src="/resources/jpg/Coffee.jpg" alt="عکس کاربر" width="120" height="120" /></a>
            @*<span class="sign-out uk-offcanvas-close btn-icon" dir="rtl" uk-icon="icon:square-signout"></span>*@
        </div>
