@model TblReport
<div class="uk-modal-dialog uk-modal-body">
    <form class="column" asp-action="ReportRestaurant" asp-controller="Restaurant" asp-area="" >
        <input type="hidden" asp-for="RestaurantId" name="RestaurantId"/>
        <h2 class="uk-h4 uk-margin-auto-left">این مکان چه مشکلی دارد؟</h2>
        <span class="uk-modal-close" uk-close></span>
        <ul>
            <li class="uk-form-controls">
                <label>این مکان موقتا بسته شده است</label>
                <input type="radio" class=" uk-radio" asp-for="Reason" name="Reason" value="این مکان موقتا بسته شده است" id="" />
            </li>
            <li class="uk-form-controls uk-margin-small-top">
                <label>این مکان تکراری است</label>
                <input type="radio" class="uk-radio" asp-for="Reason" name="Reason" value="این مکان تکراری است" id="" />
            </li>
            <li class="uk-form-controls uk-margin-small-top">
                <label>این مکان وجود ندارد</label>
                <input type="radio" class="uk-radio" asp-for="Reason" name="Reason" value="این مکان وجود ندارد" id="" />
            </li>
            <li class="uk-form-controls uk-margin-small-top">
                <label>وجود اشکال در اطلاعات مکان</label>
                <input type="radio" class="uk-radio" asp-for="Reason" name="Reason" value="وجود اشکال در اطلاعات مکان" id="" />
            </li>
        </ul>
        <label for="Other" class="uk-margin-small-bottom" dir="rtl">مشکل دیگر</label>
        <div class="form-group">
            <textarea dir="rtl" asp-for="Description"  maxlength="150" placeholder="لحاظ کنید..." name="Description"></textarea>
        </div>
        <div class="button-panel uk-margin-top uk-margin-auto">
            <input type="submit" class="btn btn-round btn-primary" value="ویرایش " />
            <div class="btn btn-round btn-secondary uk-margin-small-right uk-modal-close">بازگشت</div>
        </div>
    </form>
</div>