@model ChangePasswordVm
@{
    ViewBag.Title = "تغییر رمز عبور";
    ViewBag.BodyClass = "";
    Layout = "~/Views/Shared/_EntryLayout.cshtml";
}

<form class="column" asp-action="ChangePassword" asp-controller="Account" asp-area="">
    <input class="input" asp-for="Id" type="hidden" />
    <input class="input" asp-for="Tell" type="hidden" />
    <div class="form-group">
        <label class="input-label" for="password">رمز عبور جدید</label>
        <input class="input" autocomplete="new-password" asp-for="Password" type="password" placeholder="..." />
        <span class="input-error" asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label class="input-label" for="repassword">تکرار رمز عبور</label>
        <input class="input" autocomplete="new-password" asp-for="RePassword" type="password" placeholder="..." />
        <span class="input-error" asp-validation-for="RePassword"></span>
    </div>

    <div class="button-panel">
        <button class="btn btn-primary">تغییر</button>
    </div>

</form>


