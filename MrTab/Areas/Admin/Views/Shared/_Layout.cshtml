                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="/Admin/Home/About">
                                        درباره ما
                                    </a>
                                </li>
                                <li>
                                    <a href="/Admin/Home/Contact">
                                        قوانین سایت
                                    </a>
                                </li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </div>
            <!-- Side Nav END -->
            <!-- Page Container START -->
            <div class="page-container flex-div">
                <!-- Header START -->
                <div class="header navbar" style="z-index:7500">
                    <div class="header-container">
                        <ul class="nav-right float-right mr-3">
                            <li>
                                <a class="side-nav-toggle" href="javascript:void(0);">
                                    <i class="fas fa-align-right"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="sub-header shadow-sm" style="z-index:7000">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb rounded-0 m-0 bg-white">
                            <li class="breadcrumb-item p-0"><a href="/admin/Home">داشبورد</a></li>
                            <li class="breadcrumb-item p-0 active" aria-current="page"></li>
                        </ol>
                    </nav>
                </div>
                <!-- Header END -->
                <!-- Content Wrapper START -->
                <div class="main-content flex p-0">
                    <div class="container-fluid flex-div">
                        <div class="row flex-div" style="overflow-y:scroll">
                            <div class="col-md-12 p-4">
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Content Wrapper END -->

            </div>
            <!-- Page Container END -->
        </div>
    </div>
    <!-- #Loadin -->
    <div id="overlay">
        <div class="cv-spinner">
            <span class="spinner"></span>
        </div>
    </div>

    <!--#endregion-->
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel"></h4>
                </div>
                <div class="modal-body" id="myModalBody">
                    ...
                </div>
            </div>
        </div>
    </div>


    <script src="~/admin/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/admin/Scripts/popper.min.js"></script>
    <script src="~/admin/Scripts/docs.min.js"></script>
    <script src="~/admin/bootstrap/js/bootstrap.min.js"></script>

    <script src="~/admin/Scripts/script.js"></script>
    <script src="~/admin/bootstrap/js/bootstrap-tagsinput.js"></script>


    <!--Paging-->
    <script src="~/admin/bootstrap/Paging/jquery.simplePagination.js"></script>
    <script src="~/admin/bootstrap/Paging/Paging.js"></script>


    <script>
        function LoadingRun(form) {
            if (!$(form).valid()) return;
            $("#overlay").fadeIn(300);
        }
        function LoadingEnd(form) {
            $("#overlay").fadeOut(300);
            $(form)[0].reset();
        }
        function doneModal(form) {
            $("#myModal").modal('hide');
            $('#listCat').load('/Admin/Catagory/ListCat')
        }
    </script>

    @RenderSection("Scripts", false)
</body>
</html>
