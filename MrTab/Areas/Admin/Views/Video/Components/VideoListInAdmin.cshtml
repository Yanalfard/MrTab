@model IEnumerable<TblDoc>

@if (Model.Any())
{
    foreach (var item in Model)
    {
        <tr id="video_@item.DocId" class="list-item">
            <td>@(Model.ToList().IndexOf(item)+1)</td>
            <td>
                @item.Title
            </td>
            <td>
                @if (item.MainImage1 != null)
                {
                    <img src="/Images/Video/Images/thumb/@item.MainImage1" alt=" @item.Title" style="max-width:100px;" />
                }
                else
                {
                    <img src="/Images/NoImage.svg" alt="@item.Title" style="max-width:100px;" />
                }
            </td>
            <td>
                @item.LikeCount
            </td>
            <td>
                <span data-placement="top" data-toggle="tooltip" title="" data-original-title="ویرایش">
                    <a href="/Admin/Video/Edit/@item.DocId"><i class="btn fas fa-edit mr-2 text-primary"></i></a>
                </span>
                <span data-placement="top" data-toggle="tooltip" title="" data-original-title="حذف">
                    <a onclick="deleteVideo(@item.DocId)" data-toggle="modal" data-target="#modalSave"><i class="btn fas fa-trash mr-2 text-danger"></i></a>
                </span>
            </td>
        </tr>
    }
}
