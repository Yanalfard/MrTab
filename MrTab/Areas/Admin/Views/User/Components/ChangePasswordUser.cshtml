@model DataLayer.ViewModel.VmChangePassword

<form asp-action="ChangePassword" asp-controller="User" asp-area="Admin">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <h2 dir="rtl">ویرایش رمز عبور کاربر  @ViewBag.UserName </h2>
    <div class="form-horizontal">
        <div class="form-group">
            <label for="password">رمز عبور جدید</label>
            <div class="col-md-10">
                <input type="text" asp-for="Password" class = "form-control" required  minlength = "5" />
                <span asp-validation-for="Password" class = "text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ویرایش " class="btn btn-success" />
            </div>
        </div>
    </div>
</form>
