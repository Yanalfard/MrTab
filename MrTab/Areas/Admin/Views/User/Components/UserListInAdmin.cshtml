@model IEnumerable<TblUser>

@if (Model.Any())
{
    foreach (var item in Model)
    {
        <tr id="user_@item.UserId" class="list-item">
            <td>@(Model.ToList().IndexOf(item)+1)</td>

            <td>
                @if (item.ImageUrl != null)
                {
                    <img src="/Images/Users/@item.ImageUrl" alt=" @item.Name" style="max-width:100px;"/>
                }
                else
                {
                    <img src="/Images/NoImage.svg" alt="@item.Name"  style="max-width:100px;"/>
                }
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.TellNo
            </td>
            <td>
                @if (item.IsActive)
                {
                    <a href="#" onclick="activeDisableUser(@item.UserId)" class="badge-success badge-pill">بله</a>
                }
                else
                {
                    <a href="#" onclick="activeDisableUser(@item.UserId)" class="badge-danger badge-pill">خیر</a>
                }
                <!--یا-->
            </td>
            <td>
                <small class="text-info">@item.Role.Title</small>
            </td>
            <td>
                <a href="#" onclick="changePassword(@item.UserId)">
                    <i class="fas fa-lock text-warning">

                    </i>
                </a>
            </td>
            <td>
                <span data-placement="top" data-toggle="tooltip" title="" data-original-title="ویرایش">
                    <a href="/Admin/User/Edit/@item.UserId"><i class="btn fas fa-edit mr-2 text-primary"></i></a>
                </span>
                <span data-placement="top" data-toggle="tooltip" title="" data-original-title="حذف">
                    <a onclick="deleteUser(@item.UserId)" data-toggle="modal" data-target="#modalSave"><i class="btn fas fa-trash mr-2 text-danger"></i></a>
                </span>
            </td>
        </tr>
    }
}
