@model UserVm
@{
    ViewData["Title"] = "ایجاد کاربر";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="flex-column card flex-div border-0 shadow">
    <div class="card-header bg-white">
        <h4>کاربر جدید</h4>
    </div>
    <form asp-action="Create" asp-area="Admin" asp-controller="User" role="form" method="post" enctype="multipart/form-data">
        <div class="card-body">
            <div class="form-group mx-sm-1 mb-2">
                <input type="text"  asp-for="Name" class="form-control form-control-sm" placeholder="نام" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group mx-sm-1 mb-2">
                <input type="text"  asp-for="TellNo" class="form-control form-control-sm" placeholder="شماره تلفن" />
                <span class="text-danger" asp-validation-for="TellNo"></span>
            </div>
            <div class="form-group mx-sm-1 mb-2">
                <select asp-for="RoleId"
                        class="form-control  form-control-sm"
                        asp-items="@(new SelectList(@ViewBag.RoleId,"RoleId", "Title"))">
                </select>
                <span class="text-danger" asp-validation-for="RoleId"></span>
            </div>
            <div class="form-group mx-sm-1 mb-2">
                <select asp-for="IsActive"
                        class="form-control  form-control-sm"
                        asp-items="@(new SelectList(@ViewBag.IsActive,"Value", "Text"))">
                </select>
            </div>
            <div class="form-group mx-sm-1 mb-2">
                <input type="text"  asp-for="Password" class="form-control form-control-sm" placeholder="رمز کاربر" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group mx-sm-1 mb-2">
                <input type="file" name="imgup" asp-for="ImageUrl"  />
                <span class="text-danger" asp-validation-for="ImageUrl"></span>
            </div>
        </div>
        <div class="card-footer bg-white">
            <div class="flex-row">
                <button class="btn btn-primary">تایید</button>
                <a asp-action="Index" class="btn btn-secondary mr-2">بازگشت</a>
            </div>
        </div>
    </form>
</div>



