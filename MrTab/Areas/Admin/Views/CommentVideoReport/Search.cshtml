@model IEnumerable<TblComment>

@if (Model.Any())
{
    foreach (var item in Model)
    {
        <tr id="commentReport_@item.CommentId" class="list-item">
            <td>@(Model.ToList().IndexOf(item)+1)</td>
            <td>
                <a href="/ViewSingle/@item.DocId/@item.Restaurant.Name.Replace(" ","-")">
                    @item.Doc.Title

                </a>
            </td>
            <td>
                @item.User.Name
            </td>
            <td>
                @Convert.ToDateTime(item.DateSubmited).ToShamsi()
            </td>
            <td>
                @item.Text
            </td>
            <td>
                @if (item.IsValid)
                {
                    <a href="#" onclick="activeDisableCommentReport(@item.CommentId)" class="badge-success badge-pill">بله</a>
                }
                else
                {
                    <a href="#" onclick="activeDisableCommentReport(@item.CommentId)" class="badge-danger badge-pill">خیر</a>
                }
            </td>
            <td>
                @item.TextReport
            </td>
            <td>
                <span data-placement="top" data-toggle="tooltip" title="" data-original-title="حذف">
                    <a onclick="deleteCommentReport(@item.CommentId)" data-toggle="modal" data-target="#modalSave"><i class="btn fas fa-trash mr-2 text-danger"></i></a>
                </span>
            </td>
        </tr>
    }
}
