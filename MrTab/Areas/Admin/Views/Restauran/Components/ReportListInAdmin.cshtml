@model IEnumerable<TblReport>

@if (Model.Any())
{
    foreach (var item in Model)
    {
        <tr id="report_@item.ReportId" class="list-item">
            <td>@(Model.ToList().IndexOf(item)+1)</td>
            <td>
                <a href="/ViewSingle/@item.RestaurantId/@item.Restaurant.Name.Replace(" ","-")">
                    @item.Restaurant.Name

                </a>
            </td>
            <td>
                @item.Reason
            </td>
            <td>
                @item.Description
            </td>
            <td>
                <span data-placement="top" data-toggle="tooltip" title="" data-original-title="حذف">
                    <a onclick="deleteReport(@item.ReportId)" data-toggle="modal" data-target="#modalSave"><i class="btn fas fa-trash mr-2 text-danger"></i></a>
                </span>
            </td>
        </tr>
    }
}
