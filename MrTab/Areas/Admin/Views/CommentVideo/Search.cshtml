@model IEnumerable<TblComment>

@if (Model.Any())
{
    foreach (var item in Model)
    {
        <tr id="comment_@item.CommentId" class="list-item">
            <td>@(Model.ToList().IndexOf(item)+1)</td>
            <td>
                <a href="/ViewSingle/@item.RestaurantId/@item.Restaurant.Name.Replace(" ","-")">
                    @item.Restaurant.Name

                </a>
            </td>
            <td>
                @item.User.Name
            </td>
            <td>
                @Convert.ToDateTime(item.DateSubmited).ToShamsi()
            </td>
            <td>
                @item.Text
            </td>
            <td>
                <span data-placement="top" data-toggle="tooltip" title="" data-original-title="حذف">
                    <a onclick="deleteComment(@item.CommentId)" data-toggle="modal" data-target="#modalSave"><i class="btn fas fa-trash mr-2 text-danger"></i></a>
                </span>
            </td>
        </tr>
    }
}
