@model IEnumerable<TblFoodType>

<div id="card-table" class="p-0 card-body flex-div">
    <div class="table-responsive flex">
        <table class="table fixed pr-3 text-center">
            <thead class="thead-light">
                <tr>
                    <th scope="col">ردیف</th>
                    <th scope="col">نوع رستوران</th>
                    <th scope="col">عملیات</th>
                </tr>
            </thead>
            <tbody id="listCat" class="list-wrapper">
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr id="foodType_@item.FoodTypeId" class="list-item">
                            <td>@(Model.ToList().IndexOf(item)+1)</td>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                <span data-placement="top" data-toggle="tooltip" title="" data-original-title="ویرایش">
                                    <a onclick="edit(@item.FoodTypeId)"><i class="btn fas fa-edit mr-2 text-primary"></i></a>
                                </span>
                                <span data-placement="top" data-toggle="tooltip" title="" data-original-title="حذف">
                                    <a onclick="deleteFoodType(@item.FoodTypeId)" data-toggle="modal" data-target="#modalSave"><i class="btn fas fa-trash mr-2 text-danger"></i></a>
                                </span>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>




