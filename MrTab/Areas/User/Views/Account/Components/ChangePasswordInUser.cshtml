@model ChangePasswordUserVm


<form asp-action="ChangePassword" asp-controller="Account" asp-area="User"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-mode="replace"
      data-ajax-complete="completeChangePassword()"
      data-ajax-update="#ajaxresult">

    <div class="hideCompleChange">
       
    </div>
    <div id="ajaxresult">
        <h2 class="uk-h4 uk-margin-auto-left">تغییر گذرواژه</h2>
        <span class="uk-modal-close" uk-close></span>
        <div class="form-group">
            <label class="input-label" for="txtPassword">رمز</label>
            <input class="input" autocomplete="new-password" asp-for="Password" type="password" placeholder="..." />
            <span class="input-error" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label class="input-label" for="txtPassword">تکرار رمز</label>
            <input class="input" autocomplete="new-password" asp-for="RePassword" type="password" placeholder="..." />
            <span class="input-error" asp-validation-for="RePassword"></span>
        </div>
        <div class="button-panel uk-margin-top uk-margin-auto">
            <input type="submit" class="btn btn-round btn-primary disableComplete" value="ویرایش " />
            <div class="btn btn-round btn-secondary uk-margin-small-right uk-modal-close">بازگشت</div>
        </div>
    </div>
</form>
<script src="~/js/jquery.validate.min.js"></script>
<script src="~/js/jquery.validate.unobtrusive.js"></script>

