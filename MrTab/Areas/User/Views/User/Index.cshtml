
@{
    ViewBag.Title = "پروفایل شما";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <link href="~/css/Pages/Profile.min.css" rel="stylesheet" />
}

<!-- #region Croppie -->

<div id="Croppie" uk-modal>
    <div class="uk-modal-dialog background-transparent uk-flex">
        <div class="popup-croppie column uk-margin-auto">
            <div class="controls uk-width-1-1 row ">
                <input type="file" id="files" accept="image/*" onchange="fileSelected(this)" class="display-none">
                <label class="button-icon" for="files">
                    <span uk-icon="image"></span>
                </label>
                <button class="button-icon" onclick="crop()">
                    <span uk-icon="crop"></span>
                </button>
                @*<button class="button-icon uk-margin-auto-left" onclick="window.history.back()">
                                <span uk-icon="close"></span>
                    </button>*@
                <button class="button-icon uk-margin-auto-left uk-modal-close">
                    <span uk-icon="close"></span>
                </button>
            </div>
            <img src="~/resources/svg/Image.svg" id="item" />
        </div>
    </div>
</div>

<!-- #endregion -->

<div id="Modal-ChangePass" uk-modal>
    <div class="uk-modal-dialog uk-modal-body">
        <form class="column">
            <h2 class="uk-h4 uk-margin-auto-left">تغییر گذرواژه</h2>
            <span class="uk-modal-close" uk-close></span>
            <div class="form-group">
                <label for="txtPass" class="uk-margin-small-bottom" dir="rtl">گذرواژه جدید</label>
                <input type="password" class="form-group-bg" dir="rtl" name="txtPass" />
                <span class="input-error">این فیلد اشتباه وارد شده است</span>
            </div>
            <div class="form-group">
                <label for="txtRePass" class="uk-margin-small-bottom" dir="rtl">بازنویس گذرواژه</label>
                <input type="password" class="form-group-bg" dir="rtl" name="txtRePass" />
                <span class="input-error">این فیلد اشتباه وارد شده است</span>
            </div>
            <div class="button-panel uk-margin-top uk-margin-auto">
                <div class="btn btn-round btn-primary">ویرایش</div>
                <div class="btn btn-round btn-secondary uk-margin-small-right uk-modal-close">بازگشت</div>
            </div>
        </form>
    </div>
</div>

<div id="Modal-ChangeName" uk-modal>
    <div class="uk-modal-dialog uk-modal-body">
        <form class="column">
            <h2 class="uk-h4 uk-margin-auto-left">تغییر نام</h2>
            <span class="uk-modal-close" uk-close></span>
            <div class="form-group">
                <label for="txtName" class="uk-margin-small-bottom" dir="rtl">نام جدید</label>
                <input type="text" class="form-group-bg" dir="rtl" placeholder="نام و نام خانوادگی" name="txtName" />
                <span class="input-error">این فیلد اشتباه وارد شده است</span>
            </div>
            <div class="button-panel uk-margin-top uk-margin-auto">
                <div class="btn btn-round btn-primary">ویرایش</div>
                <div class="btn btn-round btn-secondary uk-margin-small-right uk-modal-close">بازگشت</div>
            </div>
        </form>
    </div>
</div>

<div id="Modal-ChangeTel" uk-modal>
    <div class="uk-modal-dialog uk-modal-body">
        <form class="column">
            <h2 class="uk-h4 uk-margin-auto-left">تغییر شماره تلفن</h2>
            <span class="uk-modal-close" uk-close></span>
            <div class="form-group">
                <label for="txtTel" class="uk-margin-small-bottom" dir="rtl">شماره تلفن جدید</label>
                <input type="tel" class="form-group-bg" dir="rtl" name="txtTel" />
                <span class="input-error">این فیلد اشتباه وارد شده است</span>
            </div>
            <!-- Show after the SMS is sent -->
            <hr class="uk-margin uk-margin-remove-adjacent" />
            <p>
                پیامک اهراز به شماره تلفن وارد شده فرستاده شد
                <button class="btn-icon" uk-icon="refresh-outline" uk-tooltip="ارسال دوباره" aria-label="ارسال دوباره"></button>
            </p>
            <div class="form-group">
                <label for="txtCode" class="uk-margin-small-bottom" dir="rtl">کد اهراز</label>
                <input type="text" class="form-group-bg" dir="rtl" name="txtCode" />
                <span class="input-error">این فیلد اشتباه وارد شده است</span>
            </div>
            <div class="button-panel uk-margin-top uk-margin-auto">
                <!-- Enable after the CODE is written -->
                <div class="btn btn-round btn-primary">ویرایش</div>
                <div class="btn btn-round btn-secondary uk-margin-small-right uk-modal-close">بازگشت</div>
            </div>
        </form>
    </div>
</div>

<div class="uk-container uk-margin-medium-top column">

    <div class="profile mat uk-box-shadow-medium">
        <button id="btnMore" @*uk-toggle="#Modal-More"*@ type="button"
                aria-label="بیشتر" class="btn-icon" uk-icon="ellipsis-horizontal"></button>
        <div uk-drop="pos: bottom-right">
            <div class="mat uk-box-shadow-large">
                <ul class="column uk-list">
                    <li>
                        <a href="#Modal-ChangePass" uk-toggle class="uk-text-default">
                            تغییر رمز
                        </a>
                    </li>
                    <li>
                        <a href="#Modal-ChangeName" uk-toggle class="uk-text-default">
                            تغییر نام
                        </a>
                    </li>
                    <li>
                        <a href="#Modal-ChangeTel" uk-toggle class="uk-text-default">
                            تغییر شماره تلفن
                        </a>
                    </li>
                    <li>
                        <a href="/Home/ToRestaurant" class="uk-text-default">
                            تبدیل حساب به رستوران
                        </a>
                    </li>
                    <li>
                        <a href="/" class="uk-text-danger">خروج</a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="alternate">
            <div class="profile-image">
                <img src="~/resources/jpg/Coffee.jpg" width="150" height="150" alt="عکس پروفایل" />
                <button id="btnUploadImage" uk-tooltip="آپلود عکس" uk-toggle="#Croppie"
                        class="btn-icon" aria-label="آپلود عکس پروفایل">
                    <span uk-icon="image"></span>
                </button>
            </div>

            <div class="column uk-margin-right">
                <div class="data-group" name="dName">
                    <label class="data-label">نام و نام خانوادگی</label>
                    <div class="uk-inline">
                        <button class="btn-icon uk-margin-small-right" uk-toggle="#Modal-ChangeName" type="button" aria-label="ویرایش نام"
                                uk-icon="create-outline"></button>
                        <text class="data-value">صدرا محمدی</text>
                    </div>
                </div>

                <div class="data-group" name="dTel">
                    <label class="data-label">شماره تلفن</label>
                    <div class="uk-inline">
                        <button class="btn-icon uk-margin-small-right" uk-toggle="#Modal-ChangeTel" type="button" aria-label="ویرایش شماره تلفن"
                                uk-icon="create-outline"></button>
                        <text class="data-value">0935 593 29 30</text>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="profile mat mat-margin-top uk-box-shadow-medium">
        <div class="column">
            <h3 class="uk-margin-auto">تشکیل رستوران</h3>
            <img src="~/resources/svg/undraw_cooking_lyxy.svg" class="uk-margin-auto" width="240" />
            @*<img src="~/resources/svg/MakeARestaurant.svg" />*@
            <p class="uk-grid-margin-medium text-center">
                لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است. چاپگرها و متون بلکه روزنامه و مجله در ستون و سطرآنچنان که لازم است و برای شرایط فعلی
            </p>
            <div class="button-panel uk-margin-auto">
                <a href="/Home/ToRestaurant" class="btn btn-primary">
                    تشکیل رستوران
                </a>
            </div>
        </div>
    </div>

</div>

<div class="space"></div>

@section Scripts{

    <script name="Upload Image">
        const opt = {
            viewport: {
                width: 220,
                height: 220,
                //Valid type values:'square' 'circle'
                type: 'square'
            }
        }
        var c;
        function fileSelected(input) {
            if (input.files[0] == null) return;


            if (c != undefined) {
                const popup = document.getElementsByClassName('popup-croppie')[0];
                c.element.innerHTML = `<img src="/resources/svg/Image.svg" id="item">`
                //c.destroy();
            }

            var reader = new FileReader();
            reader.onload = function () {
                var dataURL = reader.result;
                var output = document.getElementById('item');
                output.src = dataURL;
                c = new Croppie(document.getElementById('item'), opt);
            };
            reader.readAsDataURL(input.files[0]);
        }

        //Returns the Base64 string of a WebP image
        function crop() {
            try {
                c.result({ type: 'base64', size: 'viewport', format: 'png', quality: 1, circle: false }).then(i => {
                    //var image = new Image();
                    //image.src = i;
                    //document.getElementById('content').appendChild(image);
                    //console.log(i);
                    return i;
                });
            }
            catch {
                UIkit.notification('لطفا یک عکس انتخاب کنید');
            }
        }
    </script>

}